# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_KEY=your_secret_key_here_must_be_32_characters_long

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=e:/ai/chat/chat-app/database/chat.sqlite

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=ChatApp

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_must_be_32_characters_long
JWT_EXPIRATION=3600

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DIRECTORY=e:/ai/chat/chat-app/logs

# WebSocket Configuration
WEBSOCKET_HOST=127.0.0.1
WEBSOCKET_PORT=8080

# Security Settings
PASSWORD_RESET_EXPIRY=3600
TOKEN_LIFETIME=3600

# Optional Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
